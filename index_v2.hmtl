<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Old Tree Analytics — Deploy AI. Empower People.</title>
    <meta name="description" content="We integrate AI and automation into everyday operations. Workflow automation, data integration, and decision intelligence—built for measurable impact." />
    <meta name="robots" content="index,follow" />

    <!-- Canonical: update if you publish on www. -->
    <link rel="canonical" href="https://oldtreeanalytics.com/" />

    <!-- Open Graph -->
    <meta property="og:title" content="Old Tree Analytics — Deploy AI. Empower People." />
    <meta property="og:description" content="Practical automations and decision tools that remove busywork, integrate your data, and level-up teams." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://oldtreeanalytics.com/" />
    <meta property="og:image" content="/og-image.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Old Tree Analytics — Deploy AI. Empower People." />
    <meta name="twitter:description" content="Practical automations and decision tools that remove busywork, integrate your data, and level-up teams." />
    <meta name="twitter:image" content="/og-image.png" />

    <meta name="theme-color" content="#0B3B2E" />

    <!-- Favicons (add files to repo root or /assets) -->
    <!-- TODO: drop in your actual icons. SVG is preferred for crispness. -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Tailwind CDN (no build step). For production, switch to a compiled CSS build. -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              evergreen: '#0B3B2E',
              moss: '#2F6B55',
              offwhite: '#F7F7F5',
            },
            fontFamily: {
              serif: ['Centaur', 'Georgia', 'serif'], // TODO: add @font-face if you have a web license
              sans: ["Inter", "ui-sans-serif", "system-ui", "Segoe UI", "Roboto", "Helvetica", "Arial", "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji"],
            },
          },
        },
      };
    </script>
    <style>
      html, body { height: 100%; }
      /* If you license Centaur, load it here using @font-face. */
    </style>

    <!-- Organization schema (JSON-LD). Update contact points and socials. -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Old Tree Analytics LLC",
        "url": "https://oldtreeanalytics.com/",
        "logo": "https://oldtreeanalytics.com/og-image.png",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Hamilton",
          "addressRegion": "MT",
          "addressCountry": "US"
        },
        "contactPoint": [{
          "@type": "ContactPoint",
          "email": "hello@oldtreeanalytics.com",
          "contactType": "customer support"
        }]
      }
    </script>
  </head>

  <body class="bg-offwhite text-slate-800">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:bg-white focus:text-emerald-900 focus:px-3 focus:py-2 focus:rounded-md">Skip to content</a>

    <!-- Sticky nav -->
    <header class="sticky top-0 z-40 bg-offwhite/80 backdrop-blur border-b border-slate-200">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 py-3 flex items-center justify-between">
        <a href="#" class="flex items-center gap-3" aria-label="Old Tree Analytics home">
          <div class="w-8 h-8 rounded-full bg-emerald-900 flex items-center justify-center text-offwhite font-bold">OT</div>
          <span class="font-serif text-lg tracking-wide text-emerald-900">Old Tree Analytics</span>
        </a>
        <nav class="hidden md:flex items-center gap-6 text-sm" aria-label="Primary">
          <a href="#services" class="hover:text-emerald-900">Services</a>
          <a href="#process" class="hover:text-emerald-900">Process</a>
          <a href="#offer" class="hover:text-emerald-900">Free Audit</a>
          <a href="#contact" class="hover:text-emerald-900">Contact</a>
          <a href="#book" class="inline-flex items-center rounded-md bg-emerald-900 text-white px-3 py-2">Book a 20-min Fit Call</a>
        </nav>
        <button id="menuBtn" class="md:hidden inline-flex items-center justify-center rounded-md border border-slate-300 px-2 py-1" aria-expanded="false" aria-controls="mobileMenu" aria-label="Open menu">☰</button>
      </div>
      <div id="mobileMenu" class="md:hidden hidden border-t border-slate-200 bg-offwhite" role="dialog" aria-label="Mobile menu">
        <div class="px-4 py-3 flex flex-col gap-3 text-sm">
          <a href="#services" class="hover:text-emerald-900">Services</a>
          <a href="#process" class="hover:text-emerald-900">Process</a>
          <a href="#offer" class="hover:text-emerald-900">Free Audit</a>
          <a href="#contact" class="hover:text-emerald-900">Contact</a>
          <a href="#book" class="inline-flex items-center justify-center rounded-md bg-emerald-900 text-white px-3 py-2">Book a 20-min Fit Call</a>
        </div>
      </div>
    </header>

    <!-- Hero -->
    <main id="main">
      <section class="bg-emerald-900 text-offwhite">
        <div class="mx-auto max-w-6xl px-4 sm:px-6 py-20">
          <p class="uppercase tracking-[0.2em] text-emerald-200 text-xs">Montana-based • Serving clients across the U.S.</p>
          <h1 class="mt-4 font-serif text-4xl sm:text-5xl leading-tight">Deploy AI. Empower People.</h1>
          <p class="mt-4 max-w-2xl text-emerald-100 text-lg">Practical automations and decision tools that remove busywork, integrate your data, and level-up teams.</p>
          <div class="mt-8 flex flex-col sm:flex-row gap-3">
            <!-- TODO: replace YOUR_HANDLE with your actual Calendly handle. -->
            <a id="book" href="https://calendly.com/YOUR_HANDLE/ai-fit-call" class="inline-flex items-center rounded-md bg-white text-emerald-900 px-5 py-3 font-medium">Book a 20-minute AI Fit Call</a>
            <a href="#services" class="inline-flex items-center rounded-md border border-white/50 px-5 py-3">See Services</a>
          </div>
          <div class="mt-8 text-sm text-emerald-200">Stack: Python • PostgreSQL • Docker • VS Code • Windows 11</div>
        </div>
      </section>

      <!-- Services -->
      <section id="services" class="mx-auto max-w-6xl px-4 sm:px-6 py-16">
        <h2 class="font-serif text-3xl text-emerald-900">Services</h2>
        <div class="mt-8 grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <h3 class="font-medium text-lg">Workflow Automation</h3>
            <p class="mt-2 text-sm text-slate-600">Turn repetitive tasks into reliable, auditable pipelines.</p>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <h3 class="font-medium text-lg">AI Enablement</h3>
            <p class="mt-2 text-sm text-slate-600">Summaries, copilots, and decision aids tuned to your data.</p>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <h3 class="font-medium text-lg">Data Integration</h3>
            <p class="mt-2 text-sm text-slate-600">Clean joins across apps and warehouses for one source of truth.</p>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <h3 class="font-medium text-lg">Decision Intelligence</h3>
            <p class="mt-2 text-sm text-slate-600">Forecasts, KPIs, and alerts that drive action.</p>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <h3 class="font-medium text-lg">Compliance & Guardrails</h3>
            <p class="mt-2 text-sm text-slate-600">Role-based access, logging, and secure handling.</p>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <h3 class="font-medium text-lg">Advisory & Training</h3>
            <p class="mt-2 text-sm text-slate-600">Enable your teams with the habits and playbooks that stick.</p>
          </div>
        </div>
      </section>

      <!-- Process -->
      <section id="process" class="bg-white border-y border-slate-200">
        <div class="mx-auto max-w-6xl px-4 sm:px-6 py-16">
          <h2 class="font-serif text-3xl text-emerald-900">How We Work</h2>
          <div class="mt-8 grid md:grid-cols-4 gap-6 text-sm">
            <div class="rounded-xl border border-slate-200 p-5">
              <div class="text-emerald-900 font-semibold">1) Identify</div>
              <p class="mt-2 text-slate-600">We pinpoint high-leverage workflows and data sources.</p>
            </div>
            <div class="rounded-xl border border-slate-200 p-5">
              <div class="text-emerald-900 font-semibold">2) Prototype</div>
              <p class="mt-2 text-slate-600">Proof in days, not months. Keep what proves value.</p>
            </div>
            <div class="rounded-xl border border-slate-200 p-5">
              <div class="text-emerald-900 font-semibold">3) Deploy</div>
              <p class="mt-2 text-slate-600">Monitoring, permissions, and rollback plans included.</p>
            </div>
            <div class="rounded-xl border border-slate-200 p-5">
              <div class="text-emerald-900 font-semibold">4) Measure</div>
              <p class="mt-2 text-slate-600">Track impact. Iterate on what moves the needle.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Offer -->
      <section id="offer" class="mx-auto max-w-6xl px-4 sm:px-6 py-16">
        <div class="rounded-2xl bg-emerald-900 text-offwhite p-8 md:p-10">
          <h2 class="font-serif text-2xl">Free AI Ops Audit (20 minutes)</h2>
          <p class="mt-3 text-emerald-100">We map one workflow, estimate ROI, and recommend next steps. No obligation.</p>
          <div class="mt-6">
            <a href="https://calendly.com/YOUR_HANDLE/ai-fit-call" class="inline-flex items-center rounded-md bg-white text-emerald-900 px-5 py-3 font-medium">Book your session</a>
          </div>
        </div>
      </section>

      <!-- Contact / Footer -->
      <section id="contact" class="bg-white border-t border-slate-200">
        <div class="mx-auto max-w-6xl px-4 sm:px-6 py-12">
          <div class="grid md:grid-cols-2 gap-8 items-start">
            <div>
              <h2 class="font-serif text-2xl text-emerald-900">Get in touch</h2>
              <p class="mt-2 text-sm text-slate-600">Prefer email? We read every note.</p>
              <p class="mt-4"><a href="mailto:hello@oldtreeanalytics.com" class="text-emerald-900 underline">hello@oldtreeanalytics.com</a></p>
            </div>
            <div class="text-sm text-slate-600">
              <div class="font-medium text-slate-700">Old Tree Analytics LLC</div>
              <div>Hamilton, MT</div>
              <div class="mt-6 flex gap-4 text-xs text-slate-500">
                <a href="#privacy" onclick="document.getElementById('privacy').showModal();return false;" class="underline">Privacy</a>
                <a href="#terms" onclick="document.getElementById('terms').showModal();return false;" class="underline">Terms</a>
              </div>
              <div class="mt-6 text-xs text-slate-500">© <span id="y"></span> Old Tree Analytics LLC</div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Privacy / Terms as lightweight dialogs -->
    <dialog id="privacy" class="backdrop:bg-black/50 rounded-xl p-0 w-[min(90vw,800px)]">
      <div class="p-6">
        <h3 class="font-serif text-xl text-emerald-900">Privacy Policy</h3>
        <p class="mt-3 text-sm text-slate-700">We collect only what's needed to respond to your inquiries and improve our site. We do not sell personal data. For any request, contact <a class="underline" href="mailto:privacy@oldtreeanalytics.com">privacy@oldtreeanalytics.com</a>.</p>
        <div class="mt-4 text-right"><button onclick="document.getElementById('privacy').close()" class="px-4 py-2 border rounded-md">Close</button></div>
      </div>
    </dialog>

    <dialog id="terms" class="backdrop:bg-black/50 rounded-xl p-0 w-[min(90vw,800px)]">
      <div class="p-6">
        <h3 class="font-serif text-xl text-emerald-900">Terms of Use</h3>
        <p class="mt-3 text-sm text-slate-700">Information on this site is provided “as is” and does not constitute legal, financial, or technical advice. Engagements are governed by a separate written agreement.</p>
        <div class="mt-4 text-right"><button onclick="document.getElementById('terms').close()" class="px-4 py-2 border rounded-md">Close</button></div>
      </div>
    </dialog>

    <script>
      // Mobile menu toggle with proper ARIA
      const menuBtn = document.getElementById('menuBtn');
      const mobileMenu = document.getElementById('mobileMenu');
      menuBtn?.addEventListener('click', () => {
        const isOpen = mobileMenu?.classList.toggle('hidden') === false;
        menuBtn.setAttribute('aria-expanded', String(isOpen));
      });
      // Year
      document.getElementById('y').textContent = new Date().getFullYear();
    </script>
  </body>
</html>
